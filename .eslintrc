{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-empty": 0,
    "no-console": 0,
    "no-control-regex": 0,
    "semi": 2,
    "eqeqeq": [2, "allow-null"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "linebreak-style": [2, "unix"],
    "no-trailing-spaces": 2,
    "space-in-parens": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "never"],
    "space-before-blocks": 2,
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "max-len": [2, 120, 2, {"ignoreUrls": true, "ignorePattern": "\\/\\^"}],
    "quotes": [2, "single", "avoid-escape"],
    "curly": [2, "all"],
    "eol-last": 2,
    "no-with": 2
  }
}
